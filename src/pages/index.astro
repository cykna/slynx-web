---
import '../styles/globals.css';
import UiBar from "../components/uibar.astro";
import {Moon} from "@lucide/astro";
import GrowingCircle from "../transtions/growing_circle.astro"
import Home from "../pages_contents/home.astro";
---

<style>

:root {
  --page-padding: 12px;
}

.ui {
  width: 100%;
  height: 100%;
}


.header {
  display: flex;
  flex-direction: var(--header-direction);
  align-items: center;
  justify-content: center;
  height: var(--header-height);
  width: var(--header-width);
  color: var(--secondary);
  gap: 16px;
}

.header > * {
  transition-duration: 300ms;
  cursor: pointer;
  border-radius: var(--button-round);
  padding: 2px;
}

.header > *:hover {
  scale: 1.2;
  background-color: var(--background);
}


</style>
<div class="ui">
  <UiBar direction="top">
    <Home/>
    <div slot="icons" class="header">
      <GrowingCircle initiator_id="theme-switcher"><Moon/></GrowingCircle>
      <p>Abacate</p>
      <p>Melancia</p>
    </div>   
  </UiBar/>
</div>



